// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String      @id @default(uuid())
  displayName  String
  avatarUrl    String?
  uniqueCode   String?     @unique
  authSyncedAt DateTime?
  features     String[]    @default([])
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  lifeScores   LifeScore[]
  wormScores   WormScore[]
  usedInvite   Invite?     @relation("UsedInvite")
  createdInvites Invite[]  @relation("CreatedInvites")

  // User connections
  sentConnections     UserConnection[] @relation("SentConnections")
  receivedConnections UserConnection[] @relation("ReceivedConnections")

  @@map("users")
}

model LifeScore {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  score     Float
  createdAt DateTime @default(now())

  @@map("life_scores")
  @@index([userId, createdAt])
}

model UserConnection {
  id         String           @id @default(uuid())
  senderId   String
  receiverId String
  status     ConnectionStatus @default(PENDING)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  sender   User @relation("SentConnections", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedConnections", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
  @@index([senderId, status])
  @@index([receiverId, status])
  @@index([senderId, receiverId, status])
  @@map("user_connections")
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model WormScore {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  levelId   String
  score     Int
  createdAt DateTime @default(now())

  @@map("worm_scores")
  @@index([userId, levelId])
  @@index([levelId, score(sort: Desc)])
}

model Invite {
  id          String    @id @default(uuid())
  code        String    @unique
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
  usedAt      DateTime?
  usedById    String?   @unique
  usedBy      User?     @relation("UsedInvite", fields: [usedById], references: [id])
  createdById String
  createdBy   User      @relation("CreatedInvites", fields: [createdById], references: [id])

  @@map("invites")
  @@index([code])
  @@index([createdById])
}
