// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String      @id @default(uuid())
  email        String?     @unique
  displayName  String
  avatarUrl    String?
  uniqueCode   String?     @unique
  authSyncedAt DateTime?
  features     String[]    @default([])
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  lifeScores   LifeScore[]
  wormScores   WormScore[]
  usedInviteId String?
  usedInvite   Invite?     @relation("UsedInvite", fields: [usedInviteId], references: [id])
  createdInvites Invite[]  @relation("CreatedInvites")

  // Score comments
  scoreComments ScoreComment[]

  // Score reactions
  scoreReactions ScoreReaction[]

  // User connections (deprecated - kept for data preservation)
  sentConnections     UserConnection[] @relation("SentConnections")
  receivedConnections UserConnection[] @relation("ReceivedConnections")

  // Groups
  createdGroups    Group[]           @relation("CreatedGroups")
  groupMemberships GroupMembership[]
  groupInvitesSent GroupMembership[] @relation("GroupInviter")

  @@map("users")
}

model LifeScore {
  id         String           @id @default(uuid())
  userId     String
  user       User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  score      Float
  statusText String?
  createdAt  DateTime         @default(now())
  comments   ScoreComment[]
  groups     LifeScoreGroup[]
  reactions  ScoreReaction[]

  @@map("life_scores")
  @@index([userId, createdAt])
}

// User connections (deprecated - kept for data preservation, not used in code)
model UserConnection {
  id         String           @id @default(uuid())
  senderId   String
  receiverId String
  status     ConnectionStatus @default(PENDING)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  sender   User @relation("SentConnections", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedConnections", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
  @@index([senderId, status])
  @@index([receiverId, status])
  @@index([senderId, receiverId, status])
  @@map("user_connections")
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model WormScore {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  levelId   String
  score     Int
  createdAt DateTime @default(now())

  @@map("worm_scores")
  @@index([userId, levelId])
  @@index([levelId, score(sort: Desc)])
}

model Invite {
  id          String    @id @default(uuid())
  code        String    @unique
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
  createdById String
  createdBy   User      @relation("CreatedInvites", fields: [createdById], references: [id])
  usedBy      User[]    @relation("UsedInvite")

  @@map("invites")
  @@index([code])
  @@index([createdById])
}

model ScoreComment {
  id          String    @id @default(uuid())
  lifeScoreId String
  lifeScore   LifeScore @relation(fields: [lifeScoreId], references: [id], onDelete: Cascade)
  authorId    String
  author      User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  groupId     String?
  group       Group?    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  content     String
  createdAt   DateTime  @default(now())

  @@map("score_comments")
  @@index([lifeScoreId, createdAt])
  @@index([lifeScoreId, groupId])
  @@index([authorId])
}

// Groups

model Group {
  id              String            @id @default(uuid())
  name            String
  inviteCode      String?           @unique
  createdById     String
  createdBy       User              @relation("CreatedGroups", fields: [createdById], references: [id])
  memberships     GroupMembership[]
  lifeScoreGroups LifeScoreGroup[]
  comments        ScoreComment[]
  reactions       ScoreReaction[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@map("groups")
  @@index([createdById])
  @@index([inviteCode])
}

model GroupMembership {
  id          String           @id @default(uuid())
  groupId     String
  group       Group            @relation(fields: [groupId], references: [id], onDelete: Cascade)
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  role        GroupRole        @default(MEMBER)
  status      MembershipStatus @default(PENDING)
  invitedById String?
  invitedBy   User?            @relation("GroupInviter", fields: [invitedById], references: [id])
  createdAt   DateTime         @default(now())
  joinedAt    DateTime?

  @@unique([groupId, userId])
  @@map("group_memberships")
  @@index([groupId])
  @@index([userId])
  @@index([userId, status])
}

enum GroupRole {
  OWNER
  MEMBER
}

enum MembershipStatus {
  PENDING
  ACCEPTED
}

model LifeScoreGroup {
  id          String    @id @default(uuid())
  lifeScoreId String
  lifeScore   LifeScore @relation(fields: [lifeScoreId], references: [id], onDelete: Cascade)
  groupId     String
  group       Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([lifeScoreId, groupId])
  @@map("life_score_groups")
  @@index([lifeScoreId])
  @@index([groupId])
}

// Tracks when a user last viewed comments for a score in a group
model ScoreCommentRead {
  id          String    @id @default(uuid())
  userId      String
  lifeScoreId String
  groupId     String
  lastReadAt  DateTime  @default(now())

  @@unique([userId, lifeScoreId, groupId])
  @@map("score_comment_reads")
  @@index([userId, groupId])
}

// Score reactions (tap backs)
model ScoreReaction {
  id          String    @id @default(uuid())
  lifeScoreId String
  lifeScore   LifeScore @relation(fields: [lifeScoreId], references: [id], onDelete: Cascade)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId     String
  group       Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  emoji       String
  createdAt   DateTime  @default(now())

  @@unique([lifeScoreId, userId, groupId])
  @@map("score_reactions")
  @@index([lifeScoreId, groupId])
}
